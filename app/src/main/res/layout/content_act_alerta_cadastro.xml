<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".softalert.View.ActAlertaUsuario.ActAlertaCadastro"
    tools:layout_editor_absoluteY="81dp"
    tools:showIn="@layout/act_alerta_cadastro">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ImageSpinnerDesastreAvistado_content_act_alerta_cadastro"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/ic_weather_lightning_rainy_white_24dp"
                android:tint="@color/colorBackgroundIconsNaoSelecionadosMaterialDesign"
                app:layout_constraintBottom_toBottomOf="@+id/cardViewSpinnerDesastreAvistado"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/cardViewSpinnerDesastreAvistado" />

            <android.support.v7.widget.CardView
                android:id="@+id/cardViewSpinnerDesastreAvistado"
                android:layout_width="0dp"
                android:layout_height="62dp"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:background="@color/colorBackgroundComponentsMaterialDesign"
                app:cardBackgroundColor="@color/colorBackgroundComponentsMaterialDesign"
                app:cardCornerRadius="0dp"
                app:cardElevation="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/ImageSpinnerDesastreAvistado_content_act_alerta_cadastro"
                app:layout_constraintTop_toTopOf="parent">

                <com.jaredrummler.materialspinner.MaterialSpinner
                    android:id="@+id/spinnerDesastreAvistado_content_act_alerta_cadastro"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    app:ms_arrow_tint="@color/colorPrimary"
                    app:ms_background_color="@color/colorBackgroundComponentsMaterialDesign"
                    app:ms_hint_color="@color/colorPrimary" />
            </android.support.v7.widget.CardView>

            <ImageView
                android:id="@+id/ImageSpinnerMinhaSituacao_content_act_alerta_cadastro"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/baseline_face_white_24"
                android:tint="@color/colorBackgroundIconsNaoSelecionadosMaterialDesign"
                app:layout_constraintBottom_toBottomOf="@+id/cardViewSpinnerMinhaSituacao"
                app:layout_constraintEnd_toStartOf="@+id/cardViewSpinnerMinhaSituacao"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/cardViewSpinnerMinhaSituacao" />

            <android.support.v7.widget.CardView
                android:id="@+id/cardViewSpinnerMinhaSituacao"
                android:layout_width="0dp"
                android:layout_height="62dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="16dp"
                android:background="@color/colorBackgroundComponentsMaterialDesign"
                app:cardBackgroundColor="@color/colorBackgroundComponentsMaterialDesign"
                app:cardCornerRadius="0dp"
                app:cardElevation="0dp"
                app:layout_constraintEnd_toEndOf="@+id/cardViewSpinnerDesastreAvistado"
                app:layout_constraintStart_toStartOf="@+id/cardViewSpinnerDesastreAvistado"
                app:layout_constraintTop_toBottomOf="@+id/cardViewSpinnerDesastreAvistado">

                <com.jaredrummler.materialspinner.MaterialSpinner
                    android:id="@+id/spinnerMinhaSituacao_content_act_alerta_cadastro"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    app:ms_arrow_tint="@color/colorPrimary"
                    app:ms_background_color="@color/colorBackgroundComponentsMaterialDesign"
                    app:ms_hint_color="@color/colorPrimary" />
            </android.support.v7.widget.CardView>

            <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
                android:id="@+id/txtbDescricao_content_act_alerta_cadastro"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                app:iconSignifier="@drawable/baseline_book_white_24"
                app:labelText="Descrição Evento"
                app:layout_constraintEnd_toEndOf="@+id/cardViewSpinnerMinhaSituacao"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardViewSpinnerMinhaSituacao">

                <studio.carbonylgroup.textfieldboxes.ExtendedEditText
                    android:id="@+id/txtDescricao_content_act_alerta_cadastro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionNext" />/>

            </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>

            <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
                android:id="@+id/txtbLocal_content_act_alerta_cadastro"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:iconSignifier="@drawable/ic_google_maps_grey600_24dp"
                app:labelText="Local do Evento"
                app:layout_constraintEnd_toEndOf="@+id/txtbDescricao_content_act_alerta_cadastro"
                app:layout_constraintStart_toStartOf="@+id/txtbDescricao_content_act_alerta_cadastro"
                app:layout_constraintTop_toBottomOf="@+id/txtbDescricao_content_act_alerta_cadastro">

                <studio.carbonylgroup.textfieldboxes.ExtendedEditText
                    android:id="@+id/txtLocal_content_act_alerta_cadastro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionNext"
                    android:inputType="text" />/>

            </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>

            <studio.carbonylgroup.textfieldboxes.TextFieldBoxes
                android:id="@+id/txtbDescricaoVeracidade_content_act_alerta_cadastro"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:iconSignifier="@drawable/baseline_book_white_24"
                app:labelText="Descrição Veracidade"
                app:layout_constraintEnd_toEndOf="@+id/txtbLocal_content_act_alerta_cadastro"
                app:layout_constraintStart_toStartOf="@+id/txtbLocal_content_act_alerta_cadastro"
                app:layout_constraintTop_toBottomOf="@+id/txtbLocal_content_act_alerta_cadastro">

                <studio.carbonylgroup.textfieldboxes.ExtendedEditText
                    android:id="@+id/txtDescricaoVeracidade_content_act_alerta_cadastro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionNext"
                    android:inputType="text" />/>

            </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>

        </android.support.constraint.ConstraintLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>