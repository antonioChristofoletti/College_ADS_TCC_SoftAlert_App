<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:layout_editor_absoluteY="25dp">

    <TextView
        android:id="@+id/txtEvento_DataItemLista_content_act_perfil_usuario_layout_list_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Descrição do Item"
        android:textColor="@color/black"
        android:textSize="16dp"
        app:layout_constraintEnd_toStartOf="@+id/ImageView_frag_act_principal_alertar_list_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtAprovadoLista_content_act_perfil_usuario_layout_list_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Aprovado"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/txtEvento_DataItemLista_content_act_perfil_usuario_layout_list_view"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/txtEvento_DataItemLista_content_act_perfil_usuario_layout_list_view"
        app:layout_constraintTop_toBottomOf="@+id/txtEvento_DataItemLista_content_act_perfil_usuario_layout_list_view"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/ImageView_frag_act_principal_alertar_list_view"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/txtAprovadoLista_content_act_perfil_usuario_layout_list_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txtEvento_DataItemLista_content_act_perfil_usuario_layout_list_view"
        app:srcCompat="@drawable/baseline_more_vert_black_24" />


</android.support.constraint.ConstraintLayout>