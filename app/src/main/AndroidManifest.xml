<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="softalertv3.softalertv3">

    <uses-feature android:name="org.apache.http.legacy" android:required="false"/>

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.VIBRATE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/baseline_error_white_24"
        android:label="@string/app_name"
        android:roundIcon="@drawable/baseline_error_white_24"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".softalert.View.ActCadastroUsuario"
            android:label="Cadastre-se"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".softalert.View.ActCadastro_telefone_basico"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".softalert.View.ActPrincipal.ActPrincipal"
            android:label="@string/SoftAlert"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".softalert.View.ActPerfilUsuario.ActPerfilUsuario"
            android:label="@string/title_activity_act_perfil_usuario"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".softalert.View.ActLocalizacoesUsuario.ActLocalizacoesUsuario"
            android:label="@string/title_activity_ActLocalizacoesUsuario"
            android:theme="@style/AppTheme" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".softalert.View.ActAlertaUsuario.ActAlertaCadastro"
            android:label="@string/title_activity_act_alerta_cadastro"
            android:theme="@style/AppTheme" />
    </application>

</manifest>