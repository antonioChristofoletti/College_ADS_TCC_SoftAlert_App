<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:layout_editor_absoluteY="25dp">

    <TextView
        android:id="@+id/txtData_mais_Status_frag_act_principal_noticias_list_view"
        android:layout_width="0dp"
        android:layout_height="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:maxLines="1"
        android:text="Data + Status"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="@+id/txtEvento_frag_act_principal_noticias_list_view"
        app:layout_constraintStart_toEndOf="@+id/ImageViewAlerta_frag_act_principal_alertar_list_view"
        app:layout_constraintTop_toBottomOf="@+id/txtEvento_frag_act_principal_noticias_list_view" />

    <TextView
        android:id="@+id/txtEvento_frag_act_principal_noticias_list_view"
        android:layout_width="0dp"
        android:layout_height="23dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="16dp"
        android:text="Evento"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:maxLines="1"
        app:layout_constraintEnd_toStartOf="@+id/ImageViewOpcoes_frag_act_principal_alertar_list_view"
        app:layout_constraintStart_toEndOf="@+id/ImageViewAlerta_frag_act_principal_alertar_list_view"
        app:layout_constraintTop_toTopOf="@+id/ImageViewAlerta_frag_act_principal_alertar_list_view" />

    <TextView
        android:id="@+id/txtDescricao_frag_act_principal_noticias_list_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Breve descrição...."
        android:textSize="12dp"
        android:maxLines="1"
        app:layout_constraintEnd_toEndOf="@+id/txtData_mais_Status_frag_act_principal_noticias_list_view"
        app:layout_constraintStart_toStartOf="@+id/txtData_mais_Status_frag_act_principal_noticias_list_view"
        app:layout_constraintTop_toBottomOf="@+id/txtData_mais_Status_frag_act_principal_noticias_list_view" />

    <ImageView
        android:id="@+id/ImageViewOpcoes_frag_act_principal_alertar_list_view"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ImageViewAlerta_frag_act_principal_alertar_list_view"
        app:srcCompat="@drawable/baseline_more_vert_black_24" />

    <ImageView
        android:id="@+id/ImageViewAlerta_frag_act_principal_alertar_list_view"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/alert_circle_red_96dp" />


</android.support.constraint.ConstraintLayout>